<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= @title || @ranguba_template.title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% if @canonical %>
      <link rel="canonical" href="<%= @canonical %>" />
    <% end %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <%=raw @ranguba_template.head %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <%=raw @ranguba_template.header %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
    <div class="footer">
      <%=raw @ranguba_template.footer %>
    </div>
  </body>
</html>
